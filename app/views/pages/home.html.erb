<!DOCTYPE html>
<html>
<head>

  <title>SuprTipi</title>

</head>

<body>

  <!-- Banner -->

  <div id="banner">
    <div class="filter"></div>
    <h1>Welcome Home</h1>
    <br>
    <p>Anywhere at Home</p>
  </div>

    <%= render "flats/searchbar" %>


  <div class="text-center">
    <h1>List of flats available</h1>
    <div class="container">
      <div class="row">
        <% @flats.sample(6).each do |flat|%>
          <div class="col-xs-12 col-md-4">
            <div class="card text-center">
              <!-- rajouter le lien sur la card -->
              <img data-sr="enter left, wait 1s" src="<%= flat.picture_1 %>" alt="flat_picture" class="">
              <h2><%= link_to flat.title.capitalize.truncate(30), flat_path(flat.id) %></h2>
              <div class="description"><%= flat.description.truncate(50) %></div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</body>